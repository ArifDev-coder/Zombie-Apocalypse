{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.zombie.walk": {
			"initial_state": "idle",
			"states": {
				"idle": {
					"animations": ["idle"],
					"transitions": [
						{"walk": "query.is_moving"}
					]
				},
				"walk": {
					"animations": ["walk"],
					"transitions": [
						{"idle": "!query.is_moving"}
					]
				}
			}
		}
	}
}