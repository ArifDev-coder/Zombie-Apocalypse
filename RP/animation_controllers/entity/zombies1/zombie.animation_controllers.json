{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.zombie.walk": {
			"initial_state": "idle",
			"states": {
				"idle": {
					"animations": ["idle"],
					"transitions": [
						{"start_walking": "query.modified_move_speed > 0.01"}
					]
				},
				"start_walking": {
					"animations": ["start_walking"],
					"transitions": [
						{"walk": "query.all_animations_finished"}
					]
				},
				"walk": {
					"animations": ["walk"],
					"transitions": [
						{"stop_walking": "query.modified_move_speed < 0.01"}
					]
				},
				"stop_walking": {
					"animations": ["stop_walking"],
					"transitions": [
						{"idle": "query.all_animations_finished"}
					]
				}
			}
		}
	}
}