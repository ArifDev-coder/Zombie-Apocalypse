{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.mele.wield": {
			"initial_state": "first_person",
			"states": {
				"first_person": {
					"animations": ["wield_first_person"],
					"transitions": [
						{"third_person": "!c.is_first_person"}
					]
				},
				"third_person": {
					"animations": ["wield_third_person"],
					"transitions": [
						{"first_person": "c.is_first_person"}
					]
				}
			}
		},
		"controller.animation.mele.attack": {
			"states": {
				"default": {
					"transitions": [
						{ "attack": "c.is_first_person && q.is_using_item && q.item_remaining_use_duration == q.item_max_use_duration" }
					]
				},
				"attack": {
					"animations": ["attack"],
					"transitions": [
						{"default": "q.anim_time >= 0.5"}
					]
				}
			}
		}
	}
}
