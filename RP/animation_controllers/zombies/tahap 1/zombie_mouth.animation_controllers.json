{
	"format_version": "1.19.0",
	"animation_controllers": {
		"controller.animation.zombie_mouth.walk": {
			"initial_state": "idle",
			"states": {
				"idle": {
					"animations": [
						"idle"
					],
					"transitions": [
						{"walking": "query.is_moving"}
					],
					"blend_transition": 0.2
				},
				"walking": {
					"animations": [
						"walk"
					],
					"transitions": [
						{"idle": "!query.is_moving"}
					],
					"blend_transition": 0.2
				}
			}
		},
		"controller.animation.zombie_mouth.scream": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{"active": "query.get_property('za:is_screaming')"}
					]
				},
				"active": {
					"animations": [
						"scream"
					],
					"on_exit": [
						{ "event": "za:stop_scream", "target": "self" }
					],
					"transitions": [
						{"default": "query.any_animation_finished"}
					]
				}
			}
		}
	}
}